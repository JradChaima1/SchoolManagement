@model School.Core.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h2>Delete Course</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this course?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@Model.Subject?.Name</dd>

            <dt class="col-sm-3">Teacher</dt>
            <dd class="col-sm-9">@Model.Teacher?.FirstName @Model.Teacher?.LastName</dd>

            <dt class="col-sm-3">Classroom</dt>
            <dd class="col-sm-9">@Model.Classroom?.Name</dd>

            <dt class="col-sm-3">Schedule</dt>
            <dd class="col-sm-9">@Model.Schedule</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CourseId" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
