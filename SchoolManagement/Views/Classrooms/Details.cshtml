@model School.Core.Models.Classroom

@{
    ViewData["Title"] = "Classroom Details";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-door-open-fill"></i> Classroom Details</h2>
            <p class="mb-0">@Model.Name - Grade @Model.GradeLevel</p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card card-custom mb-4">
            <div class="card-header card-header-custom">
                <i class="bi bi-info-circle"></i> Classroom Information
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Classroom ID:</dt>
                    <dd class="col-sm-7">@Model.Id</dd>
                    
                    <dt class="col-sm-5">Name:</dt>
                    <dd class="col-sm-7">@Model.Name</dd>
                    
                    <dt class="col-sm-5">Grade Level:</dt>
                    <dd class="col-sm-7">Grade @Model.GradeLevel</dd>
                    
                    <dt class="col-sm-5">Capacity:</dt>
                    <dd class="col-sm-7">@Model.Capacity students</dd>
                    
                    <dt class="col-sm-5">Enrolled:</dt>
                    <dd class="col-sm-7">
                        @ViewBag.StudentCount / @Model.Capacity
                        @if (ViewBag.IsFull)
                        {
                            <span class="badge bg-danger">Full</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Available</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card card-custom mb-4">
            <div class="card-header card-header-custom">
                <i class="bi bi-people-fill"></i> Enrolled Students
            </div>
            <div class="card-body">
                @if (Model.Enrollments != null && Model.Enrollments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-custom">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Academic Year</th>
                                    <th>Semester</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var enrollment in Model.Enrollments)
                                {
                                    <tr>
                                        <td>@enrollment.Student?.FirstName @enrollment.Student?.LastName</td>
                                        <td>@enrollment.AcademicYear</td>
                                        <td>@enrollment.Semester</td>
                                        <td>
                                            <span class="badge @(enrollment.Status == "Active" ? "bg-success" : "bg-secondary")">
                                                @enrollment.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No students enrolled yet</p>
                }
            </div>
        </div>

        <div class="card card-custom">
            <div class="card-header card-header-custom">
                <i class="bi bi-book-fill"></i> Courses
            </div>
            <div class="card-body">
                @if (Model.Courses != null && Model.Courses.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-custom">
                            <thead>
                                <tr>
                                    <th>Subject</th>
                                    <th>Teacher</th>
                                    <th>Schedule</th>
                                    <th>Semester</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model.Courses)
                                {
                                    <tr>
                                        <td>@course.Subject?.Name</td>
                                        <td>@course.Teacher?.FirstName @course.Teacher?.LastName</td>
                                        <td colspan="2">@(course.Schedule ?? "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No courses assigned yet</p>
                }
            </div>
        </div>
    </div>
</div>
