@model IEnumerable<School.Core.Models.Classroom>

@{
    ViewData["Title"] = "Classrooms";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-door-open-fill"></i> Classrooms Management</h2>
            <p class="mb-0">Manage and view all classrooms</p>
        </div>
        <a asp-action="Create" class="btn btn-light btn-lg">
            <i class="bi bi-plus-circle"></i> Add Classroom
        </a>
    </div>
</div>

<div class="card card-custom">
    <div class="card-header card-header-custom">
        <i class="bi bi-table"></i> Classroom List
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-custom table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Grade Level</th>
                            <th>Capacity</th>
                            <th>Enrolled Students</th>
                            <th>Courses</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var classroom in Model)
                        {
                            <tr>
                                <td>@classroom.Id</td>
                                <td><strong>@classroom.Name</strong></td>
                                <td>Grade @classroom.GradeLevel</td>
                                <td>@classroom.Capacity</td>
                                <td>@(classroom.Enrollments?.Count ?? 0)</td>
                                <td>@(classroom.Courses?.Count ?? 0)</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@classroom.Id" 
                                       class="btn btn-sm btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@classroom.Id" 
                                       class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@classroom.Id" 
                                       class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No classrooms found</p>
                <a asp-action="Create" class="btn btn-primary-custom">
                    <i class="bi bi-plus-circle"></i> Add First Classroom
                </a>
            </div>
        }
    </div>
</div>
