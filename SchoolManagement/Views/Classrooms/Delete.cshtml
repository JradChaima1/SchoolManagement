@model School.Core.Models.Classroom

@{
    ViewData["Title"] = "Delete Classroom";
}

<div class="page-header bg-danger">
    <h2><i class="bi bi-exclamation-triangle-fill"></i> Delete Classroom</h2>
    <p class="mb-0">Are you sure you want to delete this classroom?</p>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-custom border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-door-closed"></i> Classroom to Delete
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Grade Level:</dt>
                    <dd class="col-sm-8">Grade @Model.GradeLevel</dd>
                    
                    <dt class="col-sm-4">Capacity:</dt>
                    <dd class="col-sm-8">@Model.Capacity students</dd>
                    
                    <dt class="col-sm-4">Enrolled Students:</dt>
                    <dd class="col-sm-8">@(Model.Enrollments?.Count ?? 0)</dd>
                </dl>

                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle"></i>
                    <strong>Warning:</strong> This action cannot be undone. All enrollments and courses will be affected.
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete Classroom
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
