@model IEnumerable<School.Core.Models.Parent>

@{
    ViewData["Title"] = "Parents";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Parents</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Parent
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Students</th>
                        <th>Relationship</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var parent in Model)
                    {
                        <tr>
                            <td>@parent.FirstName @parent.LastName</td>
                            <td>@parent.Email</td>
                            <td>@parent.PhoneNumber</td>
                            <td>
                                @if (parent.Students.Any())
                                {
                                    @string.Join(", ", parent.Students.Select(s => $"{s.FirstName} {s.LastName}"))
                                }
                                else
                                {
                                    <span class="text-muted">No students</span>
                                }
                            </td>
                            <td>@parent.Relationship</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@parent.ParentId" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@parent.ParentId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@parent.ParentId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
