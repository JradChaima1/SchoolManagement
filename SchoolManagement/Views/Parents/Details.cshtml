@model School.Core.Models.Parent

@{
    ViewData["Title"] = "Parent Details";
}

<h2>Parent Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Relationship</dt>
            <dd class="col-sm-9">@Model.Relationship</dd>

            <dt class="col-sm-3">Students</dt>
            <dd class="col-sm-9">
                @if (Model.Students.Any())
                {
                    <ul class="list-unstyled">
                        @foreach (var student in Model.Students)
                        {
                            <li>
                                <i class="bi bi-person"></i> @student.FirstName @student.LastName
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">No students assigned</span>
                }
            </dd>
        </dl>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.ParentId" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
