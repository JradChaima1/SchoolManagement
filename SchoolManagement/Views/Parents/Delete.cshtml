@model School.Core.Models.Parent

@{
    ViewData["Title"] = "Delete Parent";
}

<h2>Delete Parent</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this parent record?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Relationship</dt>
            <dd class="col-sm-9">@Model.Relationship</dd>

            <dt class="col-sm-3">Students</dt>
            <dd class="col-sm-9">
                @if (Model.Students.Any())
                {
                    @string.Join(", ", Model.Students.Select(s => $"{s.FirstName} {s.LastName}"))
                }
                else
                {
                    <span class="text-muted">No students</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ParentId" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
