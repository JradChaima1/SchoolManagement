@model School.Core.Models.Subject

@{
    ViewData["Title"] = "Add New Subject";
}

<div class="page-header">
    <h2><i class="bi bi-plus-circle-fill"></i> Add New Subject</h2>
    <p class="mb-0">Create a new academic subject</p>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card card-custom">
            <div class="card-header card-header-custom">
                <i class="bi bi-pencil-square"></i> Subject Information
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="Name" class="form-label">Subject Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Mathematics, Physics" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Credits" class="form-label">Credits</label>
                            <input asp-for="Credits" type="number" class="form-control" min="1" max="10" required />
                            <span asp-validation-for="Credits" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Brief description of the subject"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="bi bi-check-circle"></i> Save Subject
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
