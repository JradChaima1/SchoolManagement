@model School.Core.Models.Subject

@{
    ViewData["Title"] = "Subject Details";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-book-fill"></i> Subject Details</h2>
            <p class="mb-0">@Model.Name</p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card card-custom">
            <div class="card-header card-header-custom">
                <i class="bi bi-info-circle"></i> Subject Information
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Subject ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>
                    
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Credits:</dt>
                    <dd class="col-sm-8">@Model.Credits</dd>
                    
                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@(Model.Description ?? "N/A")</dd>
                    
                    <dt class="col-sm-4">Total Courses:</dt>
                    <dd class="col-sm-8">@(Model.Courses?.Count ?? 0)</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card card-custom">
            <div class="card-header card-header-custom">
                <i class="bi bi-journal-text"></i> Courses Using This Subject
            </div>
            <div class="card-body">
                @if (Model.Courses != null && Model.Courses.Any())
                {
                    <ul class="list-group">
                        @foreach (var course in Model.Courses)
                        {
                            <li class="list-group-item">
                                <strong>@course.Classroom?.Name</strong> - @course.Teacher?.FirstName @course.Teacher?.LastName
                                <br>
                                <small class="text-muted">@course.Schedule</small>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted text-center py-3">No courses using this subject yet</p>
                }
            </div>
        </div>
    </div>
</div>
