@model School.Core.Models.Subject

@{
    ViewData["Title"] = "Edit Subject";
}

<div class="page-header">
    <h2><i class="bi bi-pencil-fill"></i> Edit Subject</h2>
    <p class="mb-0">Update subject information</p>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card card-custom">
            <div class="card-header card-header-custom">
                <i class="bi bi-pencil-square"></i> Subject Information
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="Name" class="form-label">Subject Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Credits" class="form-label">Credits</label>
                            <input asp-for="Credits" type="number" class="form-control" min="1" max="10" required />
                            <span asp-validation-for="Credits" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="bi bi-check-circle"></i> Update Subject
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
