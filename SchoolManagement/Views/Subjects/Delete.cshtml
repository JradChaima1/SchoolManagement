@model School.Core.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<div class="page-header bg-danger">
    <h2><i class="bi bi-exclamation-triangle-fill"></i> Delete Subject</h2>
    <p class="mb-0">Are you sure you want to delete this subject?</p>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Error:</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-custom border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-book-fill"></i> Subject to Delete
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Credits:</dt>
                    <dd class="col-sm-8">@Model.Credits</dd>
                    
                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@(Model.Description ?? "N/A")</dd>
                    
                    <dt class="col-sm-4">Courses:</dt>
                    <dd class="col-sm-8">@(Model.Courses?.Count ?? 0)</dd>
                </dl>

                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle"></i>
                    <strong>Warning:</strong> This action cannot be undone. All related courses will be affected.
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete Subject
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
