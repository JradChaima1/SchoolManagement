@model IEnumerable<School.Core.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-book-fill"></i> Subjects Management</h2>
            <p class="mb-0">Manage academic subjects</p>
        </div>
        <a asp-action="Create" class="btn btn-light btn-lg">
            <i class="bi bi-plus-circle"></i> Add Subject
        </a>
    </div>
</div>

<div class="card card-custom">
    <div class="card-header card-header-custom">
        <i class="bi bi-table"></i> Subject List
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-custom table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Credits</th>
                            <th>Courses</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subject in Model)
                        {
                            <tr>
                                <td>@subject.Id</td>
                                <td><strong>@subject.Name</strong></td>
                                <td>@(subject.Description ?? "N/A")</td>
                                <td>@subject.Credits</td>
                                <td>@(subject.Courses?.Count ?? 0)</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@subject.Id" 
                                       class="btn btn-sm btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@subject.Id" 
                                       class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@subject.Id" 
                                       class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No subjects found</p>
                <a asp-action="Create" class="btn btn-primary-custom">
                    <i class="bi bi-plus-circle"></i> Add First Subject
                </a>
            </div>
        }
    </div>
</div>
