@model IEnumerable<School.Core.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-people-fill"></i> Students Management</h2>
            <p class="mb-0">Manage and view all students</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-light btn-lg">
                <i class="bi bi-plus-circle"></i> Add Student
            </a>
            <a asp-action="TopPerformers" class="btn btn-success-custom btn-lg">
                <i class="bi bi-trophy-fill"></i> Top Performers
            </a>
        </div>
    </div>
</div>


<div class="card card-custom mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchTerm" class="form-control search-box" 
                           placeholder="Search students by name..." value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary-custom w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
            {
                <div class="mt-2">
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear Search
                    </a>
                    <span class="badge badge-custom">Found @Model.Count() student(s)</span>
                </div>
            }
        </form>
    </div>
</div>

<div class="card card-custom">
    <div class="card-header card-header-custom">
        <i class="bi bi-table"></i> Student List
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-custom table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Date of Birth</th>
                            <th>Enrollment Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>
                                    <strong>@student.FirstName @student.LastName</strong>
                                </td>
                                <td>@(student.Email ?? "N/A")</td>
                                <td>@(student.PhoneNumber ?? "N/A")</td>
                                <td>@(student.DateOfBirth?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                                <td>@student.EnrollmentDate.ToString("MMM dd, yyyy")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@student.Id" 
                                       class="btn btn-sm btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@student.Id" 
                                       class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@student.Id" 
                                       class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No students found</p>
                <a asp-action="Create" class="btn btn-primary-custom">
                    <i class="bi bi-plus-circle"></i> Add First Student
                </a>
            </div>
        }
    </div>
</div>
