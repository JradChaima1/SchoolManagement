@model School.Core.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-person-circle"></i> Student Details</h2>
            <p class="mb-0">@Model.FirstName @Model.LastName</p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card card-custom mb-4">
            <div class="card-header card-header-custom">
                <i class="bi bi-person-badge"></i> Personal Information
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Student ID:</dt>
                    <dd class="col-sm-7">@Model.Id</dd>
                    
                    <dt class="col-sm-5">First Name:</dt>
                    <dd class="col-sm-7">@Model.FirstName</dd>
                    
                    <dt class="col-sm-5">Last Name:</dt>
                    <dd class="col-sm-7">@Model.LastName</dd>
                    
                    <dt class="col-sm-5">Email:</dt>
                    <dd class="col-sm-7">@(Model.Email ?? "N/A")</dd>
                    
                    <dt class="col-sm-5">Phone:</dt>
                    <dd class="col-sm-7">@(Model.PhoneNumber ?? "N/A")</dd>
                    
                    <dt class="col-sm-5">Date of Birth:</dt>
                    <dd class="col-sm-7">@(Model.DateOfBirth?.ToString("MMM dd, yyyy") ?? "N/A")</dd>
                    
                    <dt class="col-sm-5">Enrollment Date:</dt>
                    <dd class="col-sm-7">@Model.EnrollmentDate.ToString("MMM dd, yyyy")</dd>
                </dl>
            </div>
        </div>

        <div class="card card-custom">
            <div class="card-header card-header-custom">
                <i class="bi bi-graph-up"></i> Performance
            </div>
            <div class="card-body text-center">
                <h3 class="display-4">@ViewBag.AverageGrade.ToString("F2")</h3>
                <p class="text-muted">Average Grade</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card card-custom mb-4">
            <div class="card-header card-header-custom">
                <i class="bi bi-book"></i> Enrollments
            </div>
            <div class="card-body">
                @if (Model.Enrollments != null && Model.Enrollments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-custom">
                            <thead>
                                <tr>
                                    <th>Classroom</th>
                                    <th>Academic Year</th>
                                    <th>Semester</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var enrollment in Model.Enrollments)
                                {
                                    <tr>
                                        <td>@enrollment.Classroom?.Name</td>
                                        <td>@enrollment.AcademicYear</td>
                                        <td>@enrollment.Semester</td>
                                        <td>
                                            <span class="badge @(enrollment.Status == "Active" ? "bg-success" : "bg-secondary")">
                                                @enrollment.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No enrollments found</p>
                }
            </div>
        </div>

        <div class="card card-custom">
            <div class="card-header card-header-custom">
                <i class="bi bi-clipboard-check"></i> Recent Grades
            </div>
            <div class="card-body">
                @if (Model.Grades != null && Model.Grades.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-custom">
                            <thead>
                                <tr>
                                    <th>Subject</th>
                                    <th>Score</th>
                                    <th>Exam Type</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var grade in Model.Grades.OrderByDescending(g => g.DateRecorded).Take(5))
                                {
                                    <tr>
                                        <td>@grade.Subject?.Name</td>
                                        <td><strong>@grade.Score</strong></td>
                                        <td>@grade.Comments</td>
                                        <td>@grade.DateRecorded.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No grades recorded yet</p>
                }
            </div>
        </div>
    </div>
</div>
