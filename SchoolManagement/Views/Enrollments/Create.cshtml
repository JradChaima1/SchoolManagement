@model School.Core.Models.Enrollment

@{
    ViewData["Title"] = "New Enrollment";
}

<div class="page-header">
    <h2><i class="bi bi-plus-circle-fill"></i> Enroll Student</h2>
    <p class="mb-0">Assign a student to a classroom</p>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card card-custom">
            <div class="card-header card-header-custom">
                <i class="bi bi-pencil-square"></i> Enrollment Information
            </div>
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-circle"></i> @ViewBag.Error
                    </div>
                }

                <form asp-action="Create" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Student</label>
                            <select asp-for="StudentId" class="form-select" required>
                                <option value="">Select Student</option>
                                @foreach (var student in (IEnumerable<dynamic>)ViewBag.Students)
                                {
                                    <option value="@student.Value">@student.Text</option>
                                }
                            </select>
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Classroom</label>
                            <select asp-for="ClassroomId" class="form-select" required>
                                <option value="">Select Classroom</option>
                                @foreach (var classroom in (IEnumerable<dynamic>)ViewBag.Classrooms)
                                {
                                    <option value="@classroom.Value">@classroom.Text</option>
                                }
                            </select>
                            <span asp-validation-for="ClassroomId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Academic Year</label>
                            <input type="text" name="academicYear" class="form-control" 
                                   placeholder="e.g., 2024-2025" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Semester</label>
                            <select name="semester" class="form-select" required>
                                <option value="">Select Semester</option>
                                <option value="Fall">Fall</option>
                                <option value="Spring">Spring</option>
                                <option value="Summer">Summer</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="bi bi-check-circle"></i> Enroll Student
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
