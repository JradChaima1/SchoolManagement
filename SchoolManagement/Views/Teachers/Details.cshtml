@model School.Core.Models.Teacher

@{
    ViewData["Title"] = "Teacher Details";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-person-circle"></i> Teacher Details</h2>
            <p class="mb-0">@Model.FirstName @Model.LastName</p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card card-custom mb-4">
            <div class="card-header card-header-custom">
                <i class="bi bi-person-badge"></i> Personal Information
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Teacher ID:</dt>
                    <dd class="col-sm-7">@Model.Id</dd>
                    
                    <dt class="col-sm-5">First Name:</dt>
                    <dd class="col-sm-7">@Model.FirstName</dd>
                    
                    <dt class="col-sm-5">Last Name:</dt>
                    <dd class="col-sm-7">@Model.LastName</dd>
                    
                    <dt class="col-sm-5">Email:</dt>
                    <dd class="col-sm-7">@Model.Email</dd>
                    
                    <dt class="col-sm-5">Phone:</dt>
                    <dd class="col-sm-7">@(Model.PhoneNumber ?? "N/A")</dd>
                    
                    <dt class="col-sm-5">Specialization:</dt>
                    <dd class="col-sm-7">@(Model.Specialization ?? "N/A")</dd>
                    
                    <dt class="col-sm-5">Hire Date:</dt>
                    <dd class="col-sm-7">@Model.HireDate.ToString("MMM dd, yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card card-custom">
            <div class="card-header card-header-custom">
                <i class="bi bi-book"></i> Teaching Statistics
            </div>
            <div class="card-body text-center">
                <h3 class="display-4">@ViewBag.CourseCount</h3>
                <p class="text-muted">Courses Teaching</p>
            </div>
        </div>
    </div>
</div>
