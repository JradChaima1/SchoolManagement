@model IEnumerable<School.Core.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-person-badge-fill"></i> Teachers Management</h2>
            <p class="mb-0">Manage and view all teachers</p>
        </div>
        <a asp-action="Create" class="btn btn-light btn-lg">
            <i class="bi bi-plus-circle"></i> Add Teacher
        </a>
    </div>
</div>

<div class="card card-custom">
    <div class="card-header card-header-custom">
        <i class="bi bi-table"></i> Teacher List
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-custom table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Specialization</th>
                            <th>Hire Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@teacher.Id</td>
                                <td><strong>@teacher.FirstName @teacher.LastName</strong></td>
                                <td>@teacher.Email</td>
                                <td>@(teacher.PhoneNumber ?? "N/A")</td>
                                <td>@(teacher.Specialization ?? "N/A")</td>
                                <td>@teacher.HireDate.ToString("MMM dd, yyyy")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@teacher.Id" 
                                       class="btn btn-sm btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@teacher.Id" 
                                       class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@teacher.Id" 
                                       class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No teachers found</p>
                <a asp-action="Create" class="btn btn-primary-custom">
                    <i class="bi bi-plus-circle"></i> Add First Teacher
                </a>
            </div>
        }
    </div>
</div>
