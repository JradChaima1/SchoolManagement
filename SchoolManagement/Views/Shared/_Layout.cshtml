<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    @if (Context.Session.GetString("Username") != null)
    {
        <div class="wrapper">
            <aside class="sidebar">
                <div class="sidebar-header">
                    <i class="bi bi-mortarboard-fill"></i>
                    <span>School Management</span>
                </div>
                
                <div class="sidebar-user">
                    <i class="bi bi-person-circle"></i>
                    <div class="user-info">
                        <span class="user-name">@Context.Session.GetString("Username")</span>
                        <span class="user-role">@Context.Session.GetString("RoleName")</span>
                    </div>
                </div>

                <nav class="sidebar-nav">
                    <a asp-controller="Dashboard" asp-action="Index" class="nav-item">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                    <a asp-controller="Students" asp-action="Index" class="nav-item">
                        <i class="bi bi-people-fill"></i>
                        <span>Students</span>
                    </a>
                    <a asp-controller="Teachers" asp-action="Index" class="nav-item">
                        <i class="bi bi-person-badge-fill"></i>
                        <span>Teachers</span>
                    </a>
                    <a asp-controller="Classrooms" asp-action="Index" class="nav-item">
                        <i class="bi bi-door-open-fill"></i>
                        <span>Classrooms</span>
                    </a>
                    <div class="nav-divider"></div>
                    <a asp-controller="Account" asp-action="Logout" class="nav-item">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </a>
                </nav>
            </aside>

            <div class="main-content">
                <header class="topbar">
                    <button class="sidebar-toggle" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="topbar-title">
                        @ViewData["Title"]
                    </div>
                    <div class="topbar-actions">
                        <span class="topbar-user">
                            <i class="bi bi-person-circle"></i>
                            @Context.Session.GetString("Username")
                        </span>
                    </div>
                </header>

                <main class="content-area">
                    @RenderBody()
                </main>

                <footer class="footer">
                    <div class="container-fluid">
                        &copy; 2024 - School Management System
                    </div>
                </footer>
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
