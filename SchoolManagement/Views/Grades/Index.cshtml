@model IEnumerable<School.Core.Models.Grade>

@{
    ViewData["Title"] = "Grades";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Grades</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Grade
    </a>
</div>

@if (ViewBag.Average != null)
{
    <div class="alert alert-info">
        <strong>Student Average:</strong> @string.Format("{0:F2}", ViewBag.Average)
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Subject</th>
                        <th>Score</th>
                        <th>Letter Grade</th>
                        <th>Date Recorded</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model)
                    {
                        <tr>
                            <td>@grade.Student?.FirstName @grade.Student?.LastName</td>
                            <td>@grade.Subject?.Name</td>
                            <td>@grade.Score</td>
                            <td>
                                @if (grade.Score >= 18)
                                {
                                    <span class="badge bg-success">A</span>
                                }
                                else if (grade.Score >= 16)
                                {
                                    <span class="badge bg-info">B</span>
                                }
                                else if (grade.Score >= 14)
                                {
                                    <span class="badge bg-primary">C</span>
                                }
                                else if (grade.Score >= 12)
                                {
                                    <span class="badge bg-warning">D</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">F</span>
                                }
                            </td>
                            <td>@grade.DateRecorded.ToString("MMM dd, yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@grade.GradeId" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@grade.GradeId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@grade.GradeId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
