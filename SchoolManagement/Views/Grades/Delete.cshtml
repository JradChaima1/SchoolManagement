@model School.Core.Models.Grade

@{
    ViewData["Title"] = "Delete Grade";
}

<h2>Delete Grade</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this grade?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Student</dt>
            <dd class="col-sm-9">@Model.Student?.FirstName @Model.Student?.LastName</dd>

            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@Model.Subject?.Name</dd>

            <dt class="col-sm-3">Score</dt>
            <dd class="col-sm-9">@Model.Score</dd>

            <dt class="col-sm-3">Date Recorded</dt>
            <dd class="col-sm-9">@Model.DateRecorded.ToString("MMMM dd, yyyy")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="GradeId" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
